using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using static System.Net.Mime.MediaTypeNames;
namespace p4ela
{
    internal class Car
    {
        private int speed;
        private string model;

        public int Speed
        {
            get { return speed; }
            set 
            { 
                if (value <= 0 || value > 300)
                {
                    Console.WriteLine("Ошибка ввода: скорость не может быть такой!");
                    speed = 0;
                }
                else
                {
                    speed = value;
                }
                     
            }
        }
        public string Model
        {
            get {return model; }
            set 
            { 
                if (String.IsNullOrEmpty(value))
                {
                    Console.WriteLine("Ошибка ввода: строка пустая или null!");
                    model = "Неизвестная";
                }
                else
                {
                    string[] arr_text = value.Split(' ');
                    for (int i = 0; i < arr_text.Length; i++)
                    {
                        if (arr_text[i] == "--")
                        {
                            Console.WriteLine("Ошибка ввода: обнаружены запрещенные слова или символы!");
                            model = "Неизвестная";
                        }
                        if (arr_text[i] == "OR")
                        {
                            Console.WriteLine("Ошибка ввода: обнаружены запрещенные слова или символы!");
                            model = "Неизвестная";
                        }
                        if (arr_text[i] == "union")
                        {
                            Console.WriteLine("Ошибка ввода: обнаружены запрещенные слова или символы!");
                            model = "Неизвестная";
                        }
                    }
                    if (model != "Неизвестная") 
                    {
                        model = value;
                    }
                }
            }
        }
        public Car(string model, int speed)
        {
            this.Model = model;
            this.Speed = speed;
        }
        public void Drive()
        {
            if (speed == 0)
            {
                Console.WriteLine($"{Model} стоит у дороги.");
                Console.WriteLine();
            }
            else 
            {
                Console.WriteLine($"{Model} едет по дороге, со скоростью км/ч {Speed}.");
                Console.WriteLine();
            }
        }
    }
}
